@model MVC.Models.Cliente

@{
    ViewData["Title"] = "Novo Cliente PF";
}

<h1>Novo Cliente PF</h1>

<h4>Cadastro</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label>Tipo Cliente</label>
                @*<label asp-for="CodTipoCli" class="control-label"></label>*@
                <select asp-for="CodTipoCli" class="form-control" asp-items="ViewBag.CodTipoCli"></select>
            </div>
            <div class="form-group">
                <label>Nome</label>
                @*<label asp-for="Nome" class="control-label"></label>*@
                <input asp-for="Nome" class="form-control" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label>Dt Nasc.</label>
                @*<label asp-for="DataNascFund" class="control-label"></label>*@
                <input asp-for="DataNascFund" class="form-control" />
                <span asp-validation-for="DataNascFund" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label>Renda</label>
                @*<label asp-for="RendaLucro" class="control-label"></label>*@
                <input asp-for="RendaLucro" class="form-control" />
                <span asp-validation-for="RendaLucro" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label>Email</label>
                @*<label asp-for="Email" class="control-label"></label>*@
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label>Sexo</label>
                @*<label asp-for="Sexo" class="control-label"></label>*@
                <input asp-for="Sexo" class="form-control" />
                <span asp-validation-for="Sexo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label>Endereço</label>
                @*<label asp-for="Endereco" class="control-label"></label>*@
                <input asp-for="Endereco" class="form-control" />
                <span asp-validation-for="Endereco" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label>CPF</label>
                @*<label asp-for="Documento" class="control-label"></label>*@
                <input asp-for="Documento" class="form-control" />
                <span asp-validation-for="Documento" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="ListaClientes">Lista de Clientes</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
